{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "*": ["*"],
      "app/*": ["app/*"],
      "config/*": ["config/*"],
      "helpers/*": ["helpers/*"],
      "shared/*": ["shared/*"],
      "enums/*": ["enums/*"],
      "types/*": ["types/*"],
      "util/*": ["util/*"],
      "jobs/*": ["jobs/*"],
      "routes/*": ["routes/*"],
      "socket/*": ["socket/*"],
      "DB/*": ["DB/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
