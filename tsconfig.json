{
  "include": ["src"], 
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2018",

    "module": "commonjs",
    "rootDir": "./src",

    // "outFile": "./",
    "outDir": "./dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    "skipLibCheck": true
  }
}
